---
import Base from "./Base.astro";
const { title = "Project", description = "" } = Astro.props;
---

<Base {title} {description}>
  {/* Project hero & breadcrumb */}
  <section class="relative bg-gradient-to-r from-cyan-600/20 via-fuchsia-600/10 to-transparent py-10">
    <div class="container mx-auto px-4 md:px-8">
      <a href="/projects" class="inline-flex items-center gap-2 text-sm text-cyan-300 hover:text-cyan-200 mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back to Projects
      </a>
      <h1 class="text-3xl md:text-4xl font-bold tracking-tight">{title}</h1>
      <p class="mt-2 max-w-3xl text-slate-300">{description}</p>
    </div>
  </section>

  {/* Wider content area for project details */}
  <main class="container mx-auto px-4 md:px-10 py-10">
    <slot />
  </main>
</Base>
